@model Multiservicios.Models.ViewModels.ActivoItemViewModel
@using Multiservicios.Extensions
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Editar Activo</h1>
<br />
<br />
<!--
    <partial name="_StatusMessage" model="Model.StatusMessage" />
-->

<div class="border backgroundWhite row">
    <div class="col-6 border-right">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Activo.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Activo.CategoriaId" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Activo.CategoriaId" id="CategoriaId" disabled asp-items="Model.Categoria.ToSelectListITem(Model.Activo.CategoriaId)" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Activo.Nombre" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Activo.Nombre" disabled class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Activo.Cantidad" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Activo.Cantidad" class="form-control" />
                </div>
                <span asp-validation-for="Activo.Cantidad" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Activo.No_" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Activo.No_" disabled class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Activo.Estado" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Activo.Estado" class="form-control" />
                </div>
                <span asp-validation-for="Activo.Estado" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Activo.MarcaId" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Activo.MarcaId" id="MarcaId" disabled asp-items="Model.Marca.ToSelectListITem(Model.Activo.MarcaId)" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Activo.ProveedorId" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Activo.ProveedorId" id="ProveedorId" disabled asp-items="Model.Proveedor.ToSelectListITem(Model.Activo.ProveedorId)" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Activo.Descripcion" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    @Html.TextAreaFor(m => m.Activo.Descripcion)
                </div>
                <span asp-validation-for="Activo.Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="_EditAndBackToListButton" model=" Model.Activo.Id" />
                </div>

            </div>
        </form>

    </div>

</div>

@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <!--
              Caja de Texto: Descripcion
            -->

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });
    </script>
}
