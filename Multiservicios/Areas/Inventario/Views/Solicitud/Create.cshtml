@model Multiservicios.Models.ViewModels.SolicitudCompraItemViewModel
@using Multiservicios.Extensions
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-warning">
    Crear Solicitud de Compra
</h2>
<br />

<form method="post" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SolicitudCompra.Nombre" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="SolicitudCompra.Nombre" class="form-control" />
            </div>
            <span asp-validation-for="SolicitudCompra.Nombre" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SolicitudCompra.Cantidad" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="SolicitudCompra.Cantidad" class="form-control" />
            </div>
            <span asp-validation-for="SolicitudCompra.Cantidad" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SolicitudCompra.MarcaId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.SolicitudCompra.MarcaId" id="MarcaId" asp-items="Model.Marca.ToSelectListITem(Model.SolicitudCompra.MarcaId)" class="form-control"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SolicitudCompra.CategoriaId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.SolicitudCompra.CategoriaId" id="CategoriaId" asp-items="Model.Categoria.ToSelectListITem(Model.SolicitudCompra.CategoriaId)" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SolicitudCompra.Descripcion" class="col-form-label"></label>
            </div>
            <div class="col-5">
                @Html.TextAreaFor(m => m.SolicitudCompra.Descripcion)
            </div>
            <span asp-validation-for="SolicitudCompra.Descripcion" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateBackToListButton" />
            </div>
        </div>
    </div>
</form>


@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <!--
              Caja de Texto: Descripcion
            -->

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });
    </script>

}