@model Multiservicios.Models.ViewModels.TicketsItemViewModel
@using Multiservicios.Extensions
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Ticket</h1>

<br />
<br />
<form method="post" asp-action="Create">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Tickets.ID_ACTIVO" class="col-form-label"></label>
            </div>

            <div class="col-4">
                <label asp-for="Tickets.NO_SERIE" class="col-form-label"></label>
            </div>

            <div class="col-4">
                <label asp-for="Tickets.ID_TIPO_SOLICITUD" class="col-form-label"></label>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-4">
                <select id="ddlCategorialist" asp-for="Tickets.ID_ACTIVO" asp-items="Model.Activo.ToSelectListITem(Model.Tickets.ID_ACTIVO)" class="form-control"></select>
            </div>

            <div class="col-4">
                <input asp-for="Tickets.NO_SERIE" class="form-control" />
            </div>
            <span asp-validation-for="Tickets.NO_SERIE" class="text-danger"></span>

            <div class="col-4">
                <select  asp-for="Tickets.ID_TIPO_SOLICITUD" asp-items="Model.TipoSolicitud.ToSelectListITem(Model.Tickets.ID_TIPO_SOLICITUD)" class="form-control"></select>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Tickets.ID_ACTIVO" class="col-form-label"></label>
            </div>

            <div class="col-8">
                <label asp-for="Tickets.ID_TIPO_SOLICITUD" class="col-form-label"></label>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-4">
                <select id="ddlCategorialist" asp-for="Tickets.ID_ACTIVO" asp-items="Model.Activo.ToSelectListITem(Model.Tickets.ID_ACTIVO)" class="form-control"></select>
            </div>


            <div class="col-8">
                <input asp-for="Tickets.ID_TIPO_SOLICITUD" class="form-control" />
            </div>
            <span asp-validation-for="Tickets.ID_TIPO_SOLICITUD" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Tickets.DESCRIPCION" class="col-form-label"></label>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-12">
                @Html.TextAreaFor(m => m.Tickets.DESCRIPCION)
            </div>
            <span asp-validation-for="Tickets.DESCRIPCION" class="text-danger"></span>
        </div>

        <br>

        <div class="form-group row">
            <div class="col-12">
                <partial name="_CreateBackToListButton" />
            </div>
        </div>

    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });
    </script>
}
