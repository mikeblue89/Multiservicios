<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Multiservicios</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbgr border-bottom box-shadow mb-3">
            <a class="navbar-brand" asp-area="User" asp-controller="Home" asp-action="Index"><img class="posIzq" src="/images/logo.png" /></a>
            <div class="container">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse rightPosition">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark text-center font-weight-bold ajuste" asp-area="" asp-controller="Home" asp-action="Inventario"><img src="~/images/Inventario.png" /><br />Inventario</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark text-center font-weight-bold ajuste" asp-area="" asp-controller="Home" asp-action="Ticket"><img src="~/images/Ticket.png" /><br />Ticket</a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link text-dark text-center font-weight-bold ajuste" asp-area="" asp-controller="Home" asp-action="Reportes"><img src="~/images/Reporte.png" /><br />Reporte</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark text-center font-weight-bold ajuste" asp-area="" asp-controller="Home" asp-action="Usuario"><img src="~/images/Usuario.png" /><br />Usuario</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark text-center font-weight-bold ajuste" asp-area="" asp-controller="Home" asp-action="Compra"><img src="~/images/Compra.png" /><br />Compras</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            <img src="~/images/Logo_Pie2.png" /> &copy; 2020 - Analisis - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/1f9870b717.js" crossorigin="anonymous"></script>
    <script src="https://cdn.tiny.cloud/1/2hbd3ncr4jj94dsj0x9y3k6k9ium689v5f0c2iwxh9ul7j4p/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
